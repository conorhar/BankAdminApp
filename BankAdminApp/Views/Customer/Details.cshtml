                            <h5 class="card-title">Address: @Model.FullAddress</h5>
                            <br/>
                            <h5 class="card-title">Date of birth: @Model.Birthday</h5>
                            <br/>
                            <h5 class="card-title">Gender: @Model.Gender</h5>
                            <br/>
                            <h5 class="card-title">National Id: @Model.NationalId</h5>
                            <br/>
                            <h5 class="card-title">Phone number: @Model.FullTelephoneNumber</h5>
