                                <h4 class="card-title"><a href="#">Current account (@a.AccountNumber)</a></h4>
                                <h5 class="card-title">Balance: @a.Balance</h5>                                                                            
                                <text>Account number: @a.AccountNumber</text>
                                <br />
                                <text>Frequency: @a.Frequency</text>
                                <br />
                                <text>Created: @a.CreationDate</text>
                                <br />
                                <text>Ownership: @a.AccountOwnership</text>
                                <br/>
                                <br/>
                            }

